{
  "printWidth": 100,
  "tabWidth": 2,
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.*.{ts,js}",
      "options": {
        "parser": "typescript",
        "trailingComma": "all",
        "arrowParens": "always"
      }
    },
    {
      "files": "*.sol",
      "options": {
        "bracketSpacing": true,
        "explicitTypes": "always"
      }
    }
  ]
}
